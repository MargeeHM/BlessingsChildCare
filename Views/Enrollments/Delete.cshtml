@model Blessings.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Are you sure you want to delete this?</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
           
                                    <div class="col-lg-8">
                                        <div>
                                            <hr />
                                            <dl class="row">
                                                <dt class="col-sm-2">
                                                    @Html.DisplayNameFor(model => model.Course)
                                                </dt>
                                                <dd class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Course)
                                                </dd>
                                                <dt class="col-sm-2">
                                                    @Html.DisplayNameFor(model => model.RoomNo)
                                                </dt>
                                                <dd class="col-sm-10">
                                                    @Html.DisplayFor(model => model.RoomNo)
                                                </dd>
                                                <dt class="col-sm-2">
                                                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                                                </dt>
                                                <dd class="col-sm-10">
                                                    @Html.DisplayFor(model => model.EnrollmentDate)
                                                </dd>
                                                <dt class="col-sm-2">
                                                    @Html.DisplayNameFor(model => model.Child)
                                                </dt>
                                                <dd class="col-sm-10">
                                                    @Html.DisplayFor(model => model.Child.ChildFirstName)
                                                </dd>
                                            </dl>
                                            <form asp-action="Delete">
                                                <input type="hidden" asp-for="EnrollmentId" />
                                                <input type="submit" value="Delete"  class="btn btn-danger" /> |
                                                <input type="button" class="button" value="Children List"
                                                       onclick="location.href='@Url.Action("Index", "Children")'" />
                                            </form>

                                        </div>
                                     
                                    </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>



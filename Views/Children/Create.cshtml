                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="Children" asp-action="Create" method="post">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label asp-for="ChildFirstName"></label>
                                            <input type="text" asp-for="ChildFirstName" class="form-control" />
                                            <span asp-validation-for="ChildFirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChildLastName" class="control-label"></label>
                                            <input type="text" asp-for="ChildLastName" class="form-control" />

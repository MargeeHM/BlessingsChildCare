@model IEnumerable<Blessings.Models.ChildActivity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activitytime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Child)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activitytime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Child.ChildFirstName)
            </td>
            <td>
                <img src="@("~/Image/"+item.ImageName)" class="rounded-circle" width="50" height="50" asp-append-version="true" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChildActivityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChildActivityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChildActivityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

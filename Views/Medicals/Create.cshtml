@model Blessings.Models.Medical

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.css" />
<script src="https://cdn.jsdelivr.net/gh/xxjapp/xdialog@3/xdialog.min.js"></script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                xdialog.alert("@ViewBag.Message");
            };
    </script>
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">


                    <div class="card-title">
                        <h4>Medical Info</h4>

                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="Medicals" asp-action="Create" method="post">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label asp-for="PersonToContactFirstName" class="control-label"></label>
                                            <input asp-for="PersonToContactFirstName" class="form-control" />
                                            <span asp-validation-for="PersonToContactFirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="PersonToContactLastName" class="control-label"></label>
                                            <input asp-for="PersonToContactLastName" class="form-control" />
                                            <span asp-validation-for="PersonToContactLastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="PersonToContactPhone" class="control-label"></label>
                                            <input asp-for="PersonToContactPhone" class="form-control" />
                                            <span asp-validation-for="PersonToContactPhone" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChildsDoctorFirstName" class="control-label"></label>
                                            <input asp-for="ChildsDoctorFirstName" class="form-control" />
                                            <span asp-validation-for="ChildsDoctorFirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChildsDoctorLastName" class="control-label"></label>
                                            <input asp-for="ChildsDoctorLastName" class="form-control" />
                                            <span asp-validation-for="ChildsDoctorLastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChildsDoctorPhone" class="control-label"></label>
                                            <input asp-for="ChildsDoctorPhone" class="form-control" />
                                            <span asp-validation-for="ChildsDoctorPhone" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="RegularlyUsedHospitalName" class="control-label"></label>
                                            <input asp-for="RegularlyUsedHospitalName" class="form-control" />
                                            <span asp-validation-for="RegularlyUsedHospitalName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="DiaetryRestriction" class="control-label"></label>
                                            <input asp-for="DiaetryRestriction" class="form-control" />
                                            <span asp-validation-for="DiaetryRestriction" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="MedicalIssue" class="control-label"></label>
                                            <input asp-for="MedicalIssue" class="form-control" />
                                            <span asp-validation-for="MedicalIssue" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChildId" class="control-label"></label>
                                            <select asp-for="ChildId" class="form-control" asp-items="ViewBag.ChildId"></select>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" value="Create" class="btn btn-success"> Save Changes </button>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*    End PAge Content *@
    </div>
</div>





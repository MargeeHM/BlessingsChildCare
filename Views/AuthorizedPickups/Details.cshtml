@model Blessings.Models.AuthorizedPickup

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div></div>
                    <div class="card-body">
                        <h4 class="card-title">Authorized Pickup Details</h4>
                        <div class="table-responsive m-t-40">
                        </div>
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.PersonName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PersonName)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Relation)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Relation)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.phone)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.phone)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Child)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Child.ChildFirstName)
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.AuthorizedPickupId">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- End PAge Content -->
    </div>
</div>



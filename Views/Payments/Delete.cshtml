@model Blessings.Models.Payment

@{
    ViewData["Title"] = "Delete";
}

<div class="reportHeader">
<h3>
    Are you sure you want to delete this?
</h3>
</div>
<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PayerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Child)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Child.ChildFirstName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PaymentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <input type="button" class="button" value="Children List"
               onclick="location.href='@Url.Action("Index", "Children")'" />
    </form>
</div>

@model IEnumerable<Blessings.Models.ChildLog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="form-group">
                        <a value="Create" href="@Url.Action("Create", "ChildLogs")" class="btn btn-success"> Create Child Log </a>
                    </div>
                    <form asp-controller="ChildLogs" asp-action="Index" method="get">
                        <p>
                            Search:
                            <input type="text" name="SearchString">

                        </p>
                    </form>
                    <div class="card-body">
                        <h4 class="card-title">Child Log List</h4>
                        <div class="table-responsive m-t-40">
                            <table class="display nowrap table table-hover  table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Day)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CheckIn)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CheckOut)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Child)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Day)
                                        </td>
                                   
                                        <td>
                                            @if (item.CheckIn != null)
                                            {
                                                 @Html.DisplayFor(modelItem => item.CheckIn)
                                            }
                                            else 
                                            { 
                                                <label class="label btn-danger">Absent</label>                                             
                                            }
                                        </td>
                                        <td>

                                            @if (item.CheckOut != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.CheckOut)
                                            }
                                            else
                                            {
                                                <label class="label btn-danger">Absent</label>
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Child.ChildFirstName)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ChildlogId" class="btn btn-icon btn-warning btn-xs m-b-5">
                                                <i class="fa fa-edit"></i>Edit
                                            </a> |
                                            <a asp-action="Details" asp-route-id="@item.ChildlogId" class="btn btn-icon btn-success btn-xs m-b-5">
                                                <i class="fa fa-edit"></i>Details
                                            </a> |
                                            <a asp-action="Delete" asp-route-id="@item.ChildlogId" class="btn btn-icon btn-danger btn-xs m-b-5">
                                                <i class="fa fa-remove"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* End PAge Content *@
    </div>
</div>


@model IEnumerable<Blessings.Models.Staff>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="form-group">
                        <a value="Create" href="@Url.Action("Create", "Staffs")" class="btn btn-success"> Create Staff </a>
                    </div>
                    <form asp-controller="Staff" asp-action="Index" method="get">
                        <p>
                            Search:
                            <input type="text" name="SearchString">

                        </p>
                    </form>
                    <div class="card-body">
                        <h4 class="card-title">Staff List</h4>
                        <div class="table-responsive m-t-40">
                            <table class="display nowrap table table-hover  table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StaffFirstName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StaffLastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Room)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StaffFirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StaffLastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Room)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-icon btn-warning btn-xs m-b-5">
                                                    <i class="fa fa-edit"></i>Edit
                                                </a> |
                                                <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-icon btn-success btn-xs m-b-5">
                                                    <i class="fa fa-edit"></i>Details
                                                </a> |
                                                <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-icon btn-danger btn-xs m-b-5">
                                                    <i class="fa fa-remove"></i>Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* End PAge Content *@
    </div>
</div>


